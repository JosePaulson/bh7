---
import logo from '../images/bh7.png'
---

<div class="header">
    <div class="flex">
        <div class="flex-2">
            <a href="/"><img src={logo}/></a>
            <div class="flex-col">
                <span class="brand">BHeavenOn7</span>
                <span class="tagline">Quality with Quantity</span>
            </div>
        </div>
        <div class="icons">
            <!-- <p class="phone">Phone Orders: <span>+91 9491800173</span></p> -->
            <a  href="https://wa.me/+919491800173"><i class="fa-brands fa-whatsapp"></i></a>
            <a class=" hamburger"><i class="fa-solid fa-bars"></i></a>
        </div>
    </div>
    <div class="header submenu hide">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li> 
        </ul>
    </div>
</div>

<script>
    // Find all buttons with the `alert` class on the page.
    const button = document.querySelector('.hamburger');
    const submenu = document.querySelector('.submenu');
  
    // Handle clicks on each button.
      button.addEventListener('click', () => {
        submenu.classList.toggle('hide')
      });
      
  </script>

<style>
    img {
        margin-top: 2px;
        padding:2px 8px 2px 2px;
        width: 72px;
    }
    ul {
        display: flex;
        width: 100%;
        justify-content: center;
        padding-left: 0;
        padding-block: 1rem;
    }
    li {
        list-style: none;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 500;
        margin: .25rem 1rem;
        color: #000;
    }
    a {
        text-decoration: none;
        color: #000;
    }
    i {
        text-align: center;
        padding-top: .6rem;
        font-size: 32px;
        color: #ccc;
        background-color: #336e6e;
        width: 3.2rem;
        height: 3.2rem;
        border-radius: 50%;
    }
    i:hover {
        background-color: #336e6e;
    }
    .header {
        position: sticky;
        top: 0;
        z-index: 25;   
        border-bottom: 1px solid #d0d0d0;
        background-color: #fafafa;
    }
    .brand {
        font-family: 'Pacifico';
        font-size: 2rem;
        color: #336e6e;
        line-height: 2rem;
    }
    .tagline {
        color: #444;
        text-align: center;
        font-style: italic;
    }
    .phone > span {
        color: #336e6e;
        font-weight: bold;
    }
    .phone {
        font-size: .875rem;
    }
    .icons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }
    .hide {
        display: none;
    }

    .flex {
        padding-inline: 2rem;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #d0d0d0;
        padding-block: .5rem;
    }
    .flex-2 {
        display: flex;
        justify-content: space-between;
        /* border-bottom: 1px solid #d0d0d0; */
    }
    .flex-col {
        display: flex;
        flex-direction: column;
        justify-content: center;
        /* border-bottom: 1px solid #d0d0d0; */
    }
    .hamburger {
        cursor: pointer;
    }

    @media only screen and (max-width: 600px) {
        ul {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
        .phone {
            display: none;
        }
        img {
            width: 48px;
        }
        i {
        text-align: center;
        padding-top: .45rem;
        font-size: 26px;
        color: #ccc;
        background-color: #336e6e;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        }
        .flex {
            padding-inline: .75rem;
            padding-block: .8rem;
        }
        .brand {
            font-size: 1.5rem;
        }
    }

</style>